		{% else %}
      <form class="form-inline my-2 my-lg-0" action="/login" method="POST">
        <input class="form-control mr-sm-2" type="text" placeholder="Пользователь" name="user" value="{{ login }}" id="msg" required>
        <input class="form-control mr-sm-2" type="password" placeholder="Пароль" name="pass" required>
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Вход</button>
      </form>
      <script>
        let msg = document.getElementById('msg');
        msg.addEventListener('click', ()=>{
          msg.style.color = '';
          msg.value = "";
        });
        if(msg.value != ""){
          msg.style.color = 'red';
        } 
      </script>
        
